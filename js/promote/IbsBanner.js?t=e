function getTitle(index , lang){
	 
	if(lang == 'C')
	{
    if (wnew_c == null || wnew_c[index]==null)
      return "";		 
		return wnew_c[index];
	}
	else if(lang == 'S')
	{
		if (wnew_s == null || wnew_s[index]==null)
      return "";		 
		return wnew_s[index];
	}
	else		
	{
		if (wnew_e == null || wnew_e[index]==null)
      return "";		 
		return wnew_e[index];
	}
}

function getContent(index , lang){
	if(lang == 'C')
	{
		if (whatsnew_content_c == null || whatsnew_content_c[index]==null)
      return "";		 
		return whatsnew_content_c[index];
	}
	else if(lang == 'S')
	{
		if (whatsnew_content_s == null || whatsnew_content_s[index]==null)
      return "";		 
		return whatsnew_content_s[index];
	}
	else		
	{
		if (whatsnew_content_e == null || whatsnew_content_e[index]==null)
      return "";		 
		return whatsnew_content_e[index];
	}
}

function getImage(index , lang){
	if(lang == 'C')
	{
		if (pic_c == null || pic_c[index]==null)
      return "";		 
		return base+pic_c[index];
	}
	else if(lang == 'S')
	{
		if (pic_s == null || pic_s[index]==null)
      return "";		 
		return base+pic_s[index];
	}
	else		
	{
		if (pic_e == null || pic_e[index]==null)
      return "";		 
		return base+pic_e[index];
	}
}

function getLink(index , lang){
	if(lang == 'C')
	{
		if (hyper_c == null || hyper_c[index]==null)
      return "";		 
		return hyper_c[index];
	}
	else if(lang == 'S')
	{
		if (hyper_s == null || hyper_s[index]==null)
      return "";		 
		return hyper_s[index];
	}
	else		
	{
		if (hyper_e == null || hyper_e[index]==null)
      return "";		 
		return hyper_e[index];
	}
}


function init(lang)
{
	if(lang == 'C')
	{
		pic = pic_c;
		hyper = hyper_c;
	}
	else if(lang == 'S')
	{
		pic = pic_s;
		hyper = hyper_s;
	}
	else		
	{
		pic = pic_e;
		hyper = hyper_e;
	}

	document.pic0.src=base + pic[0];
	document.pic1.src=base + pic[1];
	document.pic2.src=base + pic[2];
}

function openBanner(i)
{	
	if (openBanner.arguments.length != 0)
	{
		if (pic[i] == "shim.gif" || hyper[i]=="")
		{
			var bannerWindow = "";
		}
		else
		{
			var bannerWindow = window.open(hyper[i],'its_banner',features[i]);
		}
	}
}

